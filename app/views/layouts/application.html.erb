<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-default">
		<div class="row">
			<div class="col-md-4 pull-right">
		 		<% if user_signed_in? %>
		 			<ul class="nav-bar">
		 				<li class="user-email"><%= current_user.email %></li>
		 				<li><%= link_to "Sign out", destroy_user_session_path, :method =>:delete, :class=>"btn btn-info" %><li>
		 			</ul>
		 		<% else %>
		 			<ul class="nav-bar">
		 				<li><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class=>"btn btn-info" %></li>
		 				
		 				<li><%=link_to "Sign up" , new_user_registration_path,:class=>"btn btn-info"%></li>
		 				<li><%= link_to "Sign in ", new_user_session_path,:class=>"btn btn-info" %><li>
		 			</ul>
		 		<% end %>
		 	</div>
		</div>
	</div>
	<div class="row">
        <div class="col-md-4">
			<% flash.each do |name, msg| %>
			<button type="button" class="close" data-dismiss="alert" >Ã—</button>
				<%= content_tag :div, msg, :id => "flash_#{name}"%>
			<% end %>
		</div>
	</div>
	<div class="container">
		<%= yield %>
	

</body>
</html>
